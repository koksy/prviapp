<h1>Listing shoes</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Size</th>
    <th>Description</th>
    <th>Price</th>
    <th>Color</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @shoes.each do |shoe| %>
  <tr>
    <td><%= shoe.name %></td>
    <td><%= shoe.size %></td>
    <td><%= shoe.description %></td>
    <td><%= shoe.price %></td>
    <td><%= shoe.color %></td>
    <td><%= link_to 'Show', shoe %></td>
    <td><%= link_to 'Edit', edit_shoe_path(shoe) %></td>
    <td><%= link_to 'Destroy', shoe, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

